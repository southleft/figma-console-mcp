{
	"name": "figma-console-mcp",
	"version": "1.4.1",
	"description": "MCP server for accessing Figma plugin console logs and screenshots via Cloudflare Workers or local mode",
	"type": "module",
	"main": "dist/local.js",
	"types": "dist/local.d.ts",
	"bin": {
		"figma-console-mcp": "./dist/local.js"
	},
	"files": [
		"dist",
		"figma-desktop-bridge",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"prepublishOnly": "npm run build",
		"deploy": "wrangler deploy",
		"dev": "wrangler dev",
		"dev:local": "tsx src/local.ts",
		"build": "npm run build:local && npm run build:cloudflare && npm run build:apps",
		"build:apps": "cross-env APP_NAME=token-browser vite build",
		"dev:apps": "vite build --watch",
		"build:local": "tsc -p tsconfig.local.json",
		"build:cloudflare": "tsc -p tsconfig.cloudflare.json",
		"start": "wrangler dev",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"format": "biome format --write",
		"lint:fix": "biome lint --fix",
		"cf-typegen": "wrangler types",
		"type-check": "tsc --noEmit"
	},
	"keywords": [
		"mcp",
		"figma",
		"plugin",
		"console",
		"debugging",
		"ai",
		"anthropic",
		"claude",
		"cloudflare",
		"workers"
	],
	"author": "Your Name",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/southleft/figma-console-mcp.git"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"@cloudflare/puppeteer": "^1.0.4",
		"@modelcontextprotocol/ext-apps": "^1.0.1",
		"@modelcontextprotocol/sdk": "^1.25.3",
		"agents": "^0.2.8",
		"chrome-remote-interface": "^0.33.2",
		"pino": "^9.5.0",
		"pino-pretty": "^13.0.0",
		"puppeteer-core": "^23.11.1",
		"uuid": "^11.0.3",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"cross-env": "^7.0.3",
		"vite": "^6.0.0",
		"vite-plugin-singlefile": "^2.0.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.2",
		"@types/uuid": "^10.0.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.2.5",
		"tsx": "^4.19.2",
		"typescript": "5.9.3",
		"wrangler": "^4.42.0",
		"zod-to-json-schema": "^3.25.1"
	}
}
