{
  "name": "figma-console-mcp",
  "description": "MCP server for accessing Figma plugin console logs and screenshots",
  "version": "0.1.0",
  "projectType": "mcp-server",
  "language": "typescript",
  "framework": "node",
  "agents": {
    "enabled": true,
    "defaultMode": "interactive"
  },
  "tools": {
    "serena": {
      "enabled": true,
      "priority": "high"
    },
    "context7": {
      "enabled": true,
      "priority": "medium"
    }
  },
  "codeStyle": {
    "formatter": "prettier",
    "linter": "eslint",
    "strictMode": true
  },
  "testing": {
    "framework": "jest",
    "coverageThreshold": 70
  }
}
